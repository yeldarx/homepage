<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/assets/main.css" />
    <link rel="stylesheet" href="/assets/likely.min.css">
  </head>
  <body>
    <header class="post-header">
      <h1 class="post-title">{{ title }}</h1>
      <div class="post-info">
        <p>{{ metadata.author.name }} &#x2022; {{ date | postDate }}</p>
      </div>
    </header>
    
    <main>{{ content | embedYouTubeVideos | safe }}</main>

  <button id="toggleButton">▶ Постпен бөлісу</button>
    <div id="toggleText" class="toggleBody" style="display: none;">
        <div class="likely">
            <div class="facebook">Share</div>
            <div class="twitter">Tweet</div>
            <div class="telegram">Send</div>
            <div class="linkedin">Share</div>
            <div class="whatsapp">Send</div>
        <div class="reddit">Share</div>
      </div>
    </div>

    <script>
    
    document.addEventListener('DOMContentLoaded', function () {
    const toggleButton = document.getElementById('toggleButton');
    const toggleText = document.getElementById('toggleText');

    toggleButton.addEventListener('click', function () {
        if (toggleText.style.display === 'none') {
            toggleText.style.display = 'block';
        } else {
            toggleText.style.display = 'none';
        }
    });
});
    </script>

    <footer class="footer">
      <p><a href="{{ metadata.url }}">Басты бет</a> &#x2022; <a href="https://yeldar.org/feed.xml">RSS</a></p>
    </footer>
    <script src="/assets/likely.min.js" type="text/javascript"></script>
  </body>
</html>
